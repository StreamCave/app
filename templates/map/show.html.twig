{% extends 'base.html.twig' %}

{% block title %}Détail du joueur "{{map.mapName is defined ? map.mapName : ""}}"
{% endblock %}

{% block body %}
	<h1>Détail du joueur "{{map.mapName is defined ? map.mapName : ""}}"</h1>

	<table class="table">
		<tbody>
			{% if is_granted('ROLE_ADMIN') %}
				<tr>
					<th>Id</th>
					<td>{{ map.id }}</td>
				</tr>
			{% endif %}
			<tr>
				<th>Nom de la carte</th>
				<td>{{ map.mapName }}</td>
			</tr>
			<tr>
				<th>MapImg</th>
				<td>{{ map.mapImg }}</td>
				<td><img style="width: 100px; height: 100px;" src="{{ map.mapImg is defined ? map.mapImg : 'https://cdn.artaic.fr/images/Blason-Salty.png' }}" alt="Image de {{ map.mapName }} - SA Prod"></td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-dark" href="{{ path('app_map_index') }}">
		<span class="iconify" data-icon="akar-icons:arrow-back-thick"></span>
		Retour à la liste</a>

	<a class="btn btn-light" href="{{ path('app_map_edit', {'id': map.id}) }}">
		<span class="iconify" data-icon="akar-icons:edit"></span>
		Editer</a>

	{{ include('map/_delete_form.html.twig') }}
{% endblock %}
