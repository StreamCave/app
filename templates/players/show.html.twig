{% extends 'base.html.twig' %}

{% block title %}Players{% endblock %}

{% block body %}
    <h1>Players</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>PlayerName</th>
                <td>{{ player.playerName }}</td>
            </tr>
            <tr>
                <th>PlayerAvatar</th>
                <td>{{ player.playerAvatar }}</td>
            </tr>
            <tr>
                <th>PlayerUplay</th>
                <td>{{ player.playerUplay }}</td>
            </tr>
            <tr>
                <th>PlayerAtTwitter</th>
                <td>{{ player.playerAtTwitter }}</td>
            </tr>
            <tr>
                <th>PlayerDiscord</th>
                <td>{{ player.playerDiscord }}</td>
            </tr>
            <tr>
                <th>PlayerTwitch</th>
                <td>{{ player.playerTwitch }}</td>
            </tr>
            <tr>
                <th>PlayerIsStudentSA</th>
                <td>{{ player.playerIsStudentSA ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_players_index') }}">back to list</a>

    <a href="{{ path('app_players_edit', {'id': player.id}) }}">edit</a>

    {{ include('players/_delete_form.html.twig') }}
{% endblock %}
