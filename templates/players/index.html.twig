{% extends 'base.html.twig' %}

{% block title %}Players index{% endblock %}

{% block body %}
    <h1>Players index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PlayerName</th>
                <th>PlayerAvatar</th>
                <th>PlayerUplay</th>
                <th>PlayerAtTwitter</th>
                <th>PlayerDiscord</th>
                <th>PlayerTwitch</th>
                <th>PlayerIsStudentSA</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td>{{ player.id }}</td>
                <td>{{ player.playerName }}</td>
                <td>{{ player.playerAvatar }}</td>
                <td>{{ player.playerUplay }}</td>
                <td>{{ player.playerAtTwitter }}</td>
                <td>{{ player.playerDiscord }}</td>
                <td>{{ player.playerTwitch }}</td>
                <td>{{ player.playerIsStudentSA ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_players_show', {'id': player.id}) }}">show</a>
                    <a href="{{ path('app_players_edit', {'id': player.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_players_new') }}">Create new</a>
{% endblock %}
