{% extends 'base.html.twig' %}

{% block title %}Détail du match "{{game.gameIdTeamAlpha.teamName is defined and game.gameIdTeamBeta.teamName is defined ? game.gameIdTeamAlpha.teamName ~ " VS " ~ game.gameIdTeamBeta.teamName : ""}}"
{% endblock %}

{% block body %}
	<h1>Détail du match "{{game.gameIdTeamAlpha.teamName is defined and game.gameIdTeamBeta.teamName is defined ? game.gameIdTeamAlpha.teamName ~ " VS " ~ game.gameIdTeamBeta.teamName : ""}}"</h1>

	<table class="table">
		<tbody>
			{% if is_granted('ROLE_ADMIN') %}
				<tr>
					<th>Id</th>
					<td>{{ game.id }}</td>
				</tr>
			{% endif %}
			<tr>
				<th>Versus</th>
				<th>{{ game.gameIdTeamAlpha.teamName ~ " VS " ~ game.gameIdTeamBeta.teamName }}</th>
			</tr>
			<tr>
				<th>Score</th>
				<td>{{ game.gameScoreTeamAlpha ~ " - " ~ game.gameScoreTeamBeta }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<th>
					{% if "now"|date_modify("+1 day")|date("m/d/Y", "Europe/Paris") == game.gameStartDate|date('m/d/Y', "Europe/Paris") %}
						<span class="badge bg-warning pulsate-bck">Demain</span>
					{% endif %}
					{% if "now"|date_modify("-1 day")|date("m/d/Y", "Europe/Paris") == game.gameStartDate|date('m/d/Y', "Europe/Paris") %}
						<span class="badge bg-light">Hier</span>
					{% endif %}
					{% if "now"|date_modify("-1 day")|date("m/d/Y", "Europe/Paris") != game.gameStartDate|date('m/d/Y', "Europe/Paris") and "now"|date_modify("+1 day")|date("m/d/Y", "Europe/Paris") != game.gameStartDate|date('m/d/Y') %}
						<span class="badge bg-light" style="color: #212529">{{ game.gameStartDate ? game.gameStartDate|date('d/m H:i', "Europe/Paris") : '' }}</span>
					{% endif %}
				</th>
			</tr>
			<tr>
				<th>Format</th>
				<td>{{ game.gameFormat }}</td>
			</tr>
			<tr>
				<th>Status</th>
				<th>
					{% if game.gameStatus == "soon" %}
						<span class="badge bg-info">{{ game.gameStatus }}</span>
					{% endif %}
					{% if game.gameStatus == "current" %}
						<span class="badge bg-success">{{ game.gameStatus }}</span>
					{% endif %}
					{% if game.gameStatus == "finished" %}
						<span class="badge bg-secondary">{{ game.gameStatus }}</span>
					{% endif %}
				</th>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-dark" href="{{ path('app_game_index') }}">
		<span class="iconify" data-icon="akar-icons:arrow-back-thick"></span>
		Retour à la liste</a>

	<a class="btn btn-light" href="{{ path('app_game_edit', {'id': game.id}) }}">
		<span class="iconify" data-icon="akar-icons:edit"></span>
		Editer</a>

	{{ include('game/_delete_form.html.twig') }}
{% endblock %}
