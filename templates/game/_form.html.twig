{{ form_start(form) }}

{% if form_errors(form) %}
	<div class="alert alert-danger" role="alert">
		{{ form_errors(form) }}
	</div>
{% endif %}

<div class="row">
	<div class="col">
		<div class="form-floating mb-3">
			{{ form_widget(form.gameIdTeamAlpha, {
        'attr': {'class': 'form-control'},
        'id': "gameIdTeamAlpha",
        }) }}
			{{ form_label(form.gameIdTeamAlpha, null, {
    'label': 'Définissez l\'équipe alpha',
    'id': 'gameIdTeamAlpha'
        }) }}
        </div>
    </div>
    <div class="col">
        <div class="form-floating mb-3">
        {{ form_widget(form.gameIdTeamBeta, {
            'attr': {'class': 'form-control'},
            'id': "gameIdTeamBeta",
            }) }}
        {{ form_label(form.gameIdTeamBeta, null, {
        'label': 'Définissez l\'équipe beta',
        'id': 'gameIdTeamBeta'
            }) }}
		</div>
	</div>
</div>

<div class="row">
	<div class="col">
		<div class="form-floating mb-3">
			{{ form_widget(form.gameFormat, {
			        'attr': {'class': 'form-select'},
			        'id': "gameFormat",
			        }) }}
			{{ form_label(form.gameFormat, null, {
			    'label': 'Sélectionnez le format',
			    'id': 'gameFormat'
			        }) }}
		</div>
	</div>

	<div class="col">
		<div class="form-floating mb-3">
			{{ form_widget(form.gameStatus, {
        'attr': {'class': 'form-select'},
        'id': "gameStatus",
        }) }}
			{{ form_label(form.gameStatus, null, {
    'label': 'Sélectionnez le status',
    'id': 'gameStatus'
        }) }}
		</div>
	</div>
</div>

<div>
	{{ form_label(form.gameIdMaps, null, {
    'label': 'Merci de sélectionner la ou les cartes',
    'label_attr': {'class': 'form-label select-label'},
    }) }}
	{{ form_widget(form.gameIdMaps, {
        'attr': {
            'class': 'selectpicker form-control',
            'data-max-options': 3
            },
        }) }}
</div>

<div class="form-group">
	{{ form_label(form.gameTimeNext, null, {
    'label': 'Sélectionnez la date de lancement',
    'id': 'gameTimeNext'
        }) }}
	{{ form_widget(form.gameTimeNext, {
        'attr': {'class': 'form-control'},
        'id': "gameTimeNext",
        }) }}
</div>


<button class="btn btn-success">{{ button_label|default('Créer le match') }}</button>
{{ form_end(form) }}
