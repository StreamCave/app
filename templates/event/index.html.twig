{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h1>Event index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>EventName</th>
                <th>EventEdition</th>
                <th>EventLogo</th>
                <th>EventHashtag</th>
                <th>EventCashprize</th>
                <th>EventCurrentPhase</th>
                <th>EventStartDate</th>
                <th>EventEndDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.eventName }}</td>
                <td>{{ event.eventEdition }}</td>
                <td>{{ event.eventLogo }}</td>
                <td>{{ event.eventHashtag }}</td>
                <td>{{ event.eventCashprize }}</td>
                <td>{{ event.eventCurrentPhase }}</td>
                <td>{{ event.eventStartDate ? event.eventStartDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.eventEndDate ? event.eventEndDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_event_show', {'id': event.id}) }}">show</a>
                    <a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_event_new') }}">Create new</a>
{% endblock %}
