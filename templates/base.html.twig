<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
			- Salty Academy Production
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Alumni+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		{% block stylesheets %}
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
			<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/css/iziToast.css">
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
		<script src="https://cdn.socket.io/4.4.1/socket.io.min.js" integrity="sha384-fKnu0iswBIqkjxrhQCTZ7qlLHOFEgNkRmK2vaO/LbTZSXdJfAu6ewRBdwHPhBo/H" crossorigin="anonymous"></script>
		<script src="https://code.iconify.design/2/2.2.1/iconify.min.js"></script>
		{% block javascripts %}
			<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
			<script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/js/iziToast.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
			<script src="https://player.twitch.tv/js/embed/v1.js"></script>
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body class="theme_light">

		<input type="text" id="userID" value="{{app.user.id}}" style="display: none;" disabled>
		<input type="text" id="username" value="{{app.user.pseudo}}" style="display: none;" disabled>

		{# {{dump(app.user)}} #}
		{#{{ url(app.request.attributes.get('_route')) }}#}

			<div id="grid_container" class="big"> {% if app.user %}
				<aside id="sidebar" class="big-sidebar">
					<span id="sidebar_btn">
						<span class="iconify" data-icon="fe:arrow-left"></span>
					</span>
					<div class="profile">
						<div class="left">
							<div class="img">
								<img src="{% if app.user.avatarURL %} {{app.user.avatarURL}} {% else %} https://cdn.artaic.fr/images/CampusCupLogo.png {% endif %}" alt="Photo de profil">
							</div>
						</div>
						<div class="right">
							<span>
								{% if app.user.userFirstName %}
									{{app.user.userFirstName}}
								{% else %}
									{{app.user.username}}
								{% endif %}
							</span>
							<a href="#">Voir mon profil ‚Üí</a>
						</div>
					</div>
					<div class="container">
						<nav id="menu_sidebar">
							<ul class="menu">
								<li>
									<a href="{{ path('app_admin') }}">
										<span class="iconify" data-icon="clarity:home-line"></span>
										<span>Dashboard</span>
									</a>
								</li>
								<li>
									<a href="{{ path('app_event_index') }}">
										<span class="iconify" data-icon="ei:trophy"></span>
										<span>Events</span>
									</a>
								</li>
								<li class="dropdown-menu-source">
									<div class="flex-menu">
										<a href="{{ path('app_game_index') }}">
											<span class="iconify" data-icon="ph:game-controller-thin"></span>
											<span>Matchs</span>
										</a>
										<a data-id="dropdown" href="#">
											<span class="iconify" data-icon="fe:arrow-right"></span>
										</a>
									</div>
									<ul data-id="dropdown-menu" class="display_none">
										<li>
											<a href="{{ path('app_map_index') }}">
												<span class="iconify" data-icon="et:map"></span>Maps
											</a>
										</li>
									</ul>
								</li>
								<li class="dropdown-menu-source">
									<div class="flex-menu">
										<a href="{{ path('app_overlay_index') }}">
											<span class="iconify" data-icon="et:puzzle"></span>
											<span>Overlays</span>
										</a>
										<a data-id="dropdown" href="#">
											<span class="iconify" data-icon="fe:arrow-right"></span>
										</a>
									</div>
									<ul data-id="dropdown-menu" class="display_none">
										{% if service_overlay.getOverlaysForSidebar is defined %}
											{% set arrOverlaysSidebar = [] %}
											{% for item in service_overlay.getOverlaysForSidebar %}
												{% if item.widgetOwner.id not in arrOverlaysSidebar and arrOverlaysSidebar|length != 2 %}
													<li>
														<a href="{{ path('app_overlay_show_by_iduser', {'user_id': item.widgetOwner.id}) }}">
															<span class="iconify" data-icon="fluent:puzzle-cube-piece-20-regular"></span>
															{{item.widgetOwner.pseudo}}
														</a>
													</li>
													{% set arrOverlaysSidebar = arrOverlaysSidebar|merge([item.widgetOwner.id]) %}
												{% endif %}
											{% endfor %}
										{% endif %}
										<li>
											<a href="{{ path('app_meta_overlays_index') }}">
												<span class="iconify" data-icon="carbon:data-class"></span>Metas
											</a>
										</li>
									</ul>
								</li>
								{% if is_granted('ROLE_ADMIN') %}
									<li class="dropdown-menu-source">
										<div class="flex-menu">
											<a href="{{ path('app_user_index') }}">
												<span class="iconify" data-icon="ph:users-thin"></span>
												<span>Users</span>
											</a>
											<a data-id="dropdown" href="#">
												<span class="iconify" data-icon="fe:arrow-right"></span>
											</a>
										</div>
										<ul data-id="dropdown-menu" class="display_none">
											<li>
												<a href="{{ path('app_team_index') }}">
													<span class="iconify" data-icon="fluent:people-team-16-regular"></span>Teams
												</a>
											</li>
											<li>
												<a href="{{ path('app_player_index') }}">
													<span class="iconify" data-icon="ant-design:user-outlined"></span>Players
												</a>
											</li>
										</ul>
									</li>

								{% else %}
									<ul>
										<li><ahref="{{ path('app_team_index') }}"><span class="iconify" data-icon="fluent:people-team-16-regular"></span>Teams</a></li>
										<li><ahref="{{ path('app_player_index') }}"><span class="iconify" data-icon="ant-design:user-outlined"></span>Players</a></li>
									</ul>
								{% endif %}
								{% if is_granted('ROLE_ADMIN') %}
									<li>
										<a href="{{ path('app_logs_index') }}">
											<span class="iconify" data-icon="prime:server"></span>
											<span>Logs</span>
										</a>
									</li>
								{% endif %}
							</ul>
						</nav>

						<ul id="second_menu_sidebar" class="menu">
							<li>
								<a href="#">
									<span class="iconify" data-icon="ep:setting"></span>
									<span>Settings</span>
								</a>
							</li>
							<li>
								<a href="#">
									<span class="iconify" data-icon="codicon:account"></span>
									<span>Profile</span>
								</a>
							</li>
							<li>
								<a href="/logout" style="color: #EB4242">
									<span class="iconify" data-icon="clarity:logout-solid"></span>
									<span>Logout</span>
								</a>
							</li>
						</ul>
					</div>
				</aside>
			{% endif %}
			<section id="content">
				<span class="badge bg-warning text-dark">BETA v4.1</span>
				<div class="top">
					<div class="left">
						{% if app.user %}
							{% if overlays is defined and 'admin/overlay/u' in app.request.uri %}
								<span>Hello
									<strong>{{ app.user.userFirstName != null ? app.user.userFirstName : app.user.pseudo }}
										üëã</strong>
								</span>
								<p>Panel of
									{{overlays[0].widgetOwner.pseudo}}</p>

							{% else %}
								<span>Hello
									<strong>{{ app.user.userFirstName != null ? app.user.userFirstName : app.user.pseudo }}
										üëã</strong>
								</span>
								<p>Welcome on your dashboard</p>
							{% endif %}
						{% endif %}
					</div>
					<div class="right">
						<div class="buttons">
							<a href="#" data-id="langage">
								<span class="iconify" data-icon="bi:translate"></span>
							</a>
							<a href="#" data-id="theme">
								<span class="iconify" data-icon="fluent:weather-moon-48-filled"></span>
							</a>
							<a href="#" data-id="tutorials">
								<span class="iconify" data-icon="entypo:info"></span>
							</a>
						</div>
					</div>
				</div>

				{% block body %}{% endblock %}
			</section>

			{% if app.user %}
				{% if overlays is defined and 'admin/overlay/u' in app.request.uri %}
					{{ include('components/rightbar_widgets.html.twig') }}

				{% elseif events is defined %}
					{{ include('components/rightbar_agenda.html.twig') }}
				{% endif %}
			{% endif %}
		</div>
	</body>
</html>
