{% extends 'base.html.twig' %}

{% block title %}Détail du joueur "{{player.playerName is defined ? player.playerName : ""}}"
{% endblock %}

{% block body %}
	<h1>Détail du joueur "{{player.playerName is defined ? player.playerName : ""}}"</h1>

	<table class="table">
		<tbody>
			{% if is_granted('ROLE_ADMIN') %}
				<tr>
					<th>Id</th>
					<td>{{ player.id }}</td>
				</tr>
			{% endif %}
			<tr>
				<th>Id OBS NINJA</th>
				<td>
					{% if player.playerIdOBSNinja %}
						{{ player.playerIdOBSNinja }}
					{% endif %}
				</td>
			</tr>
			<tr>
				<th>Nom du joueur</th>
				<td>{{ player.playerName }}</td>
			</tr>
			<tr>
				<th>PlayerAvatar</th>
				<td>
					<a href="{{ player.playerAvatar }}" target="_blank"><img style="width: 40%" src="{{ asset('uploads/avatars/' ~ player.playerAvatar) }}" alt="Logo de {{ player.playerName }}"></a>
				</td>
			</tr>
			<tr>
				<th>Uplay</th>
				<td>{{ player.playerUplay }}</td>
			</tr>
			<tr>
				<th>Twitter</th>
				<td>{{ player.playerAtTwitter }}</td>
			</tr>
			<tr>
				<th>Discord</th>
				<td>{{ player.playerDiscord }}</td>
			</tr>
			<tr>
				<th>Twitch</th>
				<td>{{ player.playerTwitch }}</td>
			</tr>
			<tr>
				<th>Status d'étudiant</th>
				<td>{{ player.playerStudentSA ? '<span class="iconify" color="green" data-icon="akar-icons:circle-check-fill"></span>' : '<span class="iconify" color="red" data-icon="akar-icons:circle-x-fill"></span>' }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-dark" href="{{ path('app_player_index') }}">
		<span class="iconify" data-icon="akar-icons:arrow-back-thick"></span>
		Retour à la liste</a>

	<a class="btn btn-light" href="{{ path('app_player_edit', {'id': player.id}) }}">
		<span class="iconify" data-icon="akar-icons:edit"></span>
		Editer</a>

	{{ include('player/_delete_form.html.twig') }}
{% endblock %}
