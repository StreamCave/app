<form method="post" action="{{ path('app_player_delete', {'id': player.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce joueur ?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ player.id) }}">
	<button class="btn btn-danger">
		<span class="iconify" data-icon="ant-design:delete-filled"></span>
		Supprimer le joueur</button>
</form>
