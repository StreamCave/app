{% extends 'base.html.twig' %}

{% block title %}Overlay index{% endblock %}

{% block body %}
    <h1>Overlay index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for overlay in overlays %}
            <tr>
                <td>{{ overlay.id }}</td>
                <td>
                    <a href="{{ path('app_overlay_show', {'id': overlay.id}) }}">show</a>
                    <a href="{{ path('app_overlay_edit', {'id': overlay.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_overlay_new') }}">Create new</a>
{% endblock %}
