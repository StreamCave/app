{% extends 'base.html.twig' %}

{% block title %}Détail du widget "{{overlay.widgetName is defined ? overlay.widgetName : ""}}"
{% endblock %}

{% block body %}
	<h1>Détail du widget "{{overlay.widgetName is defined ? overlay.widgetName : ""}}"</h1>

	<table class="table">
		<tbody>
			{% if is_granted('ROLE_ADMIN') %}
				<tr>
					<th>Id</th>
					<td>{{ overlay.id }}</td>
				</tr>
			{% endif %}
			<tr>
				<th>Nom du widget</th>
				<td>{{ overlay.widgetName }}</td>
			</tr>
			<tr>
				<th>Actif</th>
				<td>{{ overlay.widgetVisible ? '<span class="iconify" color="green" data-icon="akar-icons:circle-check-fill"></span>' : '<span class="iconify" color="red" data-icon="akar-icons:circle-x-fill"></span>' }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-dark" href="{{ path('app_overlay_index') }}">
		<span class="iconify" data-icon="akar-icons:arrow-back-thick"></span>
		Retour à la liste</a>

	<a class="btn btn-light" href="{{ path('app_overlay_edit', {'id': overlay.id}) }}">
		<span class="iconify" data-icon="akar-icons:edit"></span>
		Editer</a>

	{{ include('overlay/_delete_form.html.twig') }}
{% endblock %}
