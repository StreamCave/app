	<section id="overlay_show" class="container">
		<pre>
		{{ dump(widgets) }}
	</pre>


		{% if is_granted('ROLE_ADMIN') %}
			<h3>Informations sur les widgets :</h3>
			<table class="table">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Etat</th>
						<th>D√©tails</th>
					</tr>
				</thead>
