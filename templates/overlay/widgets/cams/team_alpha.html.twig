<style>
	.display_none {
		display: none !important;
	}

	iframe {
		position: fixed;
		top: 0;
		bottom: 0;
		min-width: 100vh;
		max-width: 200vh;
		width: 100%; // toute la hauteur de l'écran
		min-height: 100vh;
		max-height: 200vh;
		height: 100%; // toute la hauteur de l'écran
	}
</style>

{% set array = [] %}

{% for meta in metas %}
	{% for i in 0..4 %}
		{% if meta.metaKey == "id_cam_team_obsninja_" ~ i %}
			{% set array = array|merge([meta.metaValue]) %}
		{% endif %}
	{% endfor %}

{% endfor %}

{% for overlay in overlays %}
	{% if if overlay.widgetIdAlpha and overlay.widgetIdAlpha == "cam_tournament_alpha" or overlay.widgetIdBeta and overlay.widgetIdBeta == "cam_tournament_alpha" %}
		<section id="bottom_cam" class="{{overlay.widgetVisible ? "" : "display_none"}}">
			<div class="container_cam">
				<div class="left">
					<iframe src="https://live.artaic.fr/?view={{array[0]}}&mutespeaker" frameborder="0"></iframe>
					<iframe src="https://live.artaic.fr/?view={{array[1]}}&mutespeaker" frameborder="0"></iframe>
				</div>
				<div class="center">
					<iframe src="https://live.artaic.fr/?view={{array[2]}}&mutespeaker" frameborder="0"></iframe>
				</div>
				<div class="right">
					<iframe src="https://live.artaic.fr/?view={{array[3]}}&mutespeaker" frameborder="0"></iframe>
					<iframe src="https://live.artaic.fr/?view={{array[4]}}&mutespeaker" frameborder="0"></iframe>
				</div>
			</div>
		</section>
	{% endif %}
{% endfor %}
