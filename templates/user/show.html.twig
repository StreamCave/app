{% extends 'base.html.twig' %}

{% block title %}Détail de l'utilisateur "{{user.username is defined ? user.username : ""}}"
{% endblock %}

{% block body %}
	<h1>Détail de l'utilisateur "{{user.username is defined ? user.username : ""}}</h1>

	<table class="table">
		<tbody>
			{% if is_granted('ROLE_ADMIN') %}
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
			{% endif %}
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Prénom</th>
				<td>{{ user.userFirstName }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ user.userLastName }}</td>
			</tr>
			<tr>
				<th>Pseudo</th>
				<td>{{ user.username }}</td>
			</tr>
			<tr>
				<th>Avatar</th>
				<td>
					<a href="{{ user.avatarURL }}" target="_blank"><img style="width: 40%" src="{{ asset('uploads/avatars/' ~ user.avatarURL) }}" alt="Logo de {{ user.pseudo }}"></a>
				</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-dark" href="{{ path('app_user_index') }}">
		<span class="iconify" data-icon="akar-icons:arrow-back-thick"></span>
		Retour à la liste</a>

	{# <a href="{{ path('app_user_edit', {'id': team.id}) }}">
									<span class="iconify" data-icon="akar-icons:edit"></span>
									Editer</a> #}

	{{ include('user/_delete_form.html.twig') }}
{% endblock %}
